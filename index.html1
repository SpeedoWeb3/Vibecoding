                <button class="btn btn-secondary" onclick="closeModal('changePasswordModal')">Cancel</button>
                <button class="btn btn-primary" onclick="changePassword()">
                    <i class="fas fa-check"></i>
                    Update Password
                </button>
            </div>
        </div>
